<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.innovitics.newsfeedsapp.ui.home.ExploreFragment"
        android:label="@string/menu_explore"
        tools:layout="@layout/fragment_explore">

        <action
            android:id="@+id/action_from_exploreFragment_to_newsDetailsFragment"
            app:destination="@id/newsDetailsFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/newsDetailsFragment"
        android:name="com.innovitics.newsfeedsapp.ui.home.NewsDetailsFragment"
        tools:layout="@layout/news_details_layout"/>



</navigation>